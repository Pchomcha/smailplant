<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.com.smileplants.A11fhome">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="มาปลูกพืชกันเถอะ"
        android:background="@drawable/shape03"
        android:textSize="40dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="เลือกพืชตาม"
            android:id="@+id/textView4"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•ประเภทของผลผลิต"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•ระยะเวลาในการปลูก"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•ฤดูกาลที่ปลูกได้"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:layout_weight="0.16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•วิธีการปลูก"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:layout_weight="0.16"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:id="@+id/imageView"
            android:src="@drawable/produc"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:id="@+id/imageView2"
            android:src="@drawable/age"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:id="@+id/imageView3"
            android:src="@drawable/season"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="98dp"
            android:id="@+id/imageView4"
            android:src="@drawable/plat"
            android:background="@android:color/transparent" />
    </LinearLayout>

</FrameLayout>
