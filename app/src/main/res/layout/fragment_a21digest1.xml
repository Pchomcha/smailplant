<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.com.smileplants.A21digest1"
    android:background="@drawable/shape03">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="การจำแนกประเภทนี้"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เป็นที่นิยมใช้ในแวดวงการศึกษาการวิจัยต่างๆ"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="และเป็นเกณฑ์การจำแนกที่เป็นสากล"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="โดยอาศัยความเกี่ยวข้องใกล้เคียงกันของผัก"
                android:id="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" มีการเจริญเติบโต ในสภาพภูมิประเทศ"
                android:id="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="และภูมิอากาศคล้าย คลึงกัน"
                android:id="@+id/textView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นอกจากนี้ผักประเภทเดียวกัน มักมีระบบการ"
                android:id="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เจริญเติบโต ทางราก ลำต้น และใบ"
                android:id="@+id/textView16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ระบบการสืบพันธุ์ ได้แก่ ดอก ผล และเมล็ด"
                android:id="@+id/textView17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ที่คล้ายคลึงกัน และส่วนมาก นิยมจำแนกผัก "
                android:id="@+id/textView18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตามลักษณะทางพฤกษศาสตร์นี้ "
                android:id="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ถึงแค่ระดับตระกูล(Family)"
                android:id="@+id/textView20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยกตัวอย่าง เช่น"
                android:id="@+id/textView21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ตระกูลกะหล่ำ  ได้แก่  กะหล่ำดาว กะหล่ำดอก
                             กะหล่ำปลี กวางตุ้ง คะน้า ผักกาดหัว
                             ผักกาดเขียวปลี  บรอคคอลี"
                android:id="@+id/textView22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตระกูลแตง  ได้แก่  แตงกวา แตงเทศ แตงโม
                        ตำลึง บวบเหลี่ยม บวบหอม
                         น้ำเต้า ฟักทอง มะระ"
                android:id="@+id/textView23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตระกูลถั่ว  ได้แก่  กระถิน แค ชะอม ถั่วแขก
                        ถั่วฝักยาว ถั่วลันเตา มันแกว โสน"
                android:id="@+id/textView24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตระกูลมะเขือ  ได้แก่  พริก พริกยักษ์ พริกหวาน
                         มะเขือ มะเขือเทศ มะแว้ง "
                android:id="@+id/textView25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ตระะกูลมะเขือ   ได้แก่  กระเทียม หอมแดง
                         หอมแบ่ง หอมหัวใหญ่"
                android:id="@+id/textView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตระกูล อื่นๆ  ได้แก่  ข้าวโพดหวาน คื่นฉ่าย
                          เครื่องเทศ ผักกาดหอม
                          ผักชี ผักบุ้งจีน สมุนไพร"
                android:id="@+id/textView27" />


        </LinearLayout>
    </ScrollView>

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="1.การจำแนกผักตามลักษณะ ทางพฤกษศาสตร์ "
        android:textSize="30dp"
        android:layout_gravity="right|center_vertical" />

</FrameLayout>
